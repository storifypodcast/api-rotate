# Database (individual vars used by Docker Compose)
POSTGRES_USER="user"
POSTGRES_PASSWORD="password"
POSTGRES_DB="api_rotate"
#POSTGRES_HOST="localhost"
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST:-postgres}:${POSTGRES_PORT:-5432}/${POSTGRES_DB}?sslmode=${POSTGRES_SSL_MODE:-disable}"

# For local dev (outside Docker) - uses localhost
# Note: Use sslmode=require in production!
#DATABASE_URL="postgresql://user:password@localhost:5432/api_rotate?sslmode=disable"

# Server
PORT=3001
NODE_ENV="development"

# CORS - Comma-separated list of allowed origins
# In development, localhost is automatically allowed
CORS_ORIGINS="https://yourdomain.com,https://api.yourdomain.com"

# Authentication (Better Auth) - for Admin UI
# Generate a secret with: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-min-32-chars-here"
BETTER_AUTH_URL="http://localhost:3000"

# Email (Resend) - for OTP verification
# Get your API key from https://resend.com
RESEND_API_KEY=""
# From address for transactional emails (must be verified in Resend)
EMAIL_FROM="noreply@yourdomain.com"

# Backend API URL (for Docker, use container name; for local dev, use localhost)
# Defaults to http://api:3001 in Docker, http://localhost:3001 locally
BACKEND_URL="http://api:3001"

# Note: SERVICE_API_KEY is no longer needed!
# Service keys are now per-user and managed via the Admin UI.

# Note: ENCRYPTION_KEY is NEVER stored server-side
# Admin enters it in browser, client apps get it out-of-band
# Generate with: openssl rand -base64 32
